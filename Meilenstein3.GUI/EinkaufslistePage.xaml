<Page x:Class="Meilenstein3.GUI.EinkaufslistePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Meilenstein3.GUI"
      mc:Ignorable="d"
      Title="Einkaufsliste" Height="450" Width="800">
    <Grid Margin="20">
        <ListView ItemsSource="{Binding MeineEinkaufsliste}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Artikel">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Artikelbezeichnung, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Kategorie">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ComboBox ItemsSource="{Binding Source={x:Static local:KategorienValues.All}}"
                                          SelectedItem="{Binding Kategorie, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Menge">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Menge, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Preis">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBox Text="{Binding Preis, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Artikel löschen">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Button Content="X"
                                            Tag="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="Black"
                                            Cursor="Hand"
                                            HorizontalAlignment="Right"
                                            Width="20"
                                            Click="Loeschen_Click"/>
                                </Grid>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
        <Button Content = "Artikel Hinzufügen" Margin="5" Click="ArtikelHinzufügen_Click"/>
        <Button Content ="Einkaufsliste speichern" Margin="5" Click="ListeSpeichern_Click"/>
        </StackPanel>
    </Grid>
</Page>

