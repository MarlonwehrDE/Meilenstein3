<Page x:Class="Meilenstein3.GUI.AufgabenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meilenstein3.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="AufgabenPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="137*"/>
        </Grid.ColumnDefinitions>
        <Button Cursor="Hand" Name="ColorToggleButton_Saugen" Content="           " HorizontalAlignment="Left" Margin="18,55,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,62,0,0" TextWrapping="Wrap" Text="Saugen" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"/>
        <Button Cursor="Hand" x:Name="ColorToggleButton_Staubwischen" Content="           " HorizontalAlignment="Left" Margin="18,127,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"><Run Language="de-de" Text="Staubwischen"/></TextBlock>
        <Button Cursor="Hand" x:Name="ColorToggleButton_Wischen" Content="           " HorizontalAlignment="Left" Margin="18,200,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <Button Cursor="Hand" x:Name="ColorToggleButton_Kochen" Content="           " HorizontalAlignment="Left" Margin="18,274,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <Button Cursor="Hand" x:Name="ColorToggleButton_Spülmaschine" Content="           " HorizontalAlignment="Left" Margin="18,351,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <Button Cursor="Hand" x:Name="ColorToggleButton_Waschmaschine" Content="           " HorizontalAlignment="Left" Margin="18,427,0,0" VerticalAlignment="Top" Height="37" Click="ColorToggleButton_Click" Background="Red"/>
        <TextBlock HorizontalAlignment="Left" Margin="98,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"><Run Language="de-de" Text="Wischen"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="98,281,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"><Run Language="de-de" Text="Kochen"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="98,356,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"><Run Language="de-de" Text="Spülmaschine"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="98,432,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.ColumnSpan="2"><Run Language="de-de" Text="Waschmaschine"/><LineBreak/><Run Language="de-de"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="461,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.Column="1"><Run Language="de-de" Text="Zu tun"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="549,153,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.Column="1"><Run Language="de-de" Text="Erledigt"/></TextBlock>
        <Rectangle HorizontalAlignment="Left" Height="37" Margin="465,99,0,0" Stroke="Green" VerticalAlignment="Top" Width="40" Grid.Column="1" Fill="Green"/>
        <Rectangle HorizontalAlignment="Left" Height="37" Margin="558,99,0,0" Stroke="Red" VerticalAlignment="Top" Width="40" Grid.Column="1" Fill="Red"/>
        <Rectangle Grid.Column="1" HorizontalAlignment="Left" Height="118" Margin="444,69,0,0" Stroke="Black" VerticalAlignment="Top" Width="183"/>

        <TextBlock HorizontalAlignment="Left" Margin="220,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="17" Grid.Column="1"><Run Language="de-de" Text="Person auswählen"/></TextBlock>
        <StackPanel Grid.Column="1" Margin="145,64,425,-64" >
            <ComboBox x:Name="comboAufgabe1" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,50"/>
            <ComboBox x:Name="comboAufgabe2" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,50"/>
            <ComboBox x:Name="comboAufgabe3" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,50"/>
            <ComboBox x:Name="comboAufgabe4" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,54"/>
            <ComboBox x:Name="comboAufgabe5" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,50"/>
            <ComboBox x:Name="comboAufgabe6" SelectionChanged="ComboBox_SelectionChanged" Margin="0,0,0,50"/>
        </StackPanel>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="51" Margin="608,29,0,0" VerticalAlignment="Top" Width="51" Source="/info.png"/>
    </Grid>
</Page>
